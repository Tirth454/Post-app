<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Profile</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
            <div class="w-full flex justify-end">
                <a
                    class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
                    href="/logout"
                    >Logout</a
                >
            </div>
            <h1 class="text-3xl text-white">
                <span class="text-4xl">Hello,</span><%= user.username%>
            </h1>
            <h3 class="text-2xl text-white mt-4">Create new Post:</h3>
            <form action="/createPost" method="post">
                <textarea
                    placeholder="Enter your thoughts..."
                    class="resize-none w-1/3 rounded-md bg-transparent border-2 border-zinc-800 text-white-200"
                    name="content"
                ></textarea>
                <input
                    class="px-3 py-2 bg-blue-500 block rounded-md w-40"
                    type="submit"
                />
            </form>
            <div class="posts mt-20">
                <h3 class="text-zinc-400">Your Posts:</h3>
                <div class="postcontainer gap-2 flex flex-wrap">
                    <% user.posts.forEach((p)=>{ %>
                    <div
                        class="post w-70 p-4 rounded-md border-2 border-zinc-800 bg-zinc-800"
                    >
                        <h4 class="text-blue-500 mb-2">@<%=user.username%></h4>
                        <p class="text-sm tracking-tight"><%= p.content%></p>
                        <div class="btns flex mt-5 gap-4">
                            <a class="text-blue-500" href="">Like</a>
                            <a class="text-zinc-400" href="">delete</a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </body>
</html>
